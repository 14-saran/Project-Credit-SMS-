<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <!-- Tree View -->
  <record id="view_credit_purchase_tree" model="ir.ui.view">
    <field name="name">credit.purchase.tree</field>
    <field name="model">credit.purchase</field>
    <field name="type">tree</field>
    <field name="arch" type="xml">
      <tree string="Credit Purchases">
        <field name="name"/>
        <field name="customer_id"/>
        <field name="lot_id"/>
        <field name="total_credit"/>
        <field name="used_credit"/>
        <field name="expiry_date"/>
        <field name="price"/>
        <field name="revenue_recognized"/>
        <field name="journal_entry_id"/>
      </tree>
    </field>
  </record>

  <!-- Form View -->
  <record id="view_credit_purchase_form" model="ir.ui.view">
    <field name="name">credit.purchase.form</field>
    <field name="model">credit.purchase</field>
    <field name="type">form</field>
    <field name="arch" type="xml">
      <form string="Credit Purchase">
        <sheet>
          <group>
            <field name="name"/>
            <field name="customer_id"/>
            <field name="lot_id"/>
            <field name="total_credit"/>
            <field name="used_credit"/>
            <field name="expiry_date"/>
            <field name="price"/>
            <field name="revenue_recognized"/>
            <field name="journal_entry_id"/>
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <!-- Action -->
  <record id="action_credit_purchase" model="ir.actions.act_window">
    <field name="name">Credit Purchases</field>
    <field name="res_model">credit.purchase</field>
    <field name="view_mode">tree,form</field>
    <field name="help" type="html">
      <p>Manage customer credit packages and track usage.</p>
    </field>
  </record>

  <!-- Menu -->
  <menuitem id="menu_credit_root" name="Credit Management" sequence="10"/>

  <menuitem id="menu_credit_purchase" name="Credit Purchases"
            parent="menu_credit_root"
            action="action_credit_purchase"
            sequence="20"/>
</odoo>
